<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/details_movie_release_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorWhite"/>

    <ToggleButton
        android:id="@+id/favorite_movie"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/favorite_button"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:text="@null"
        android:textOff="@null"
        android:textOn="@null"
        android:textSize="0sp"/>


    <TextView
        android:id="@+id/details_movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/details_movie_release_year"
        android:layout_centerInParent="true"
        android:layout_gravity="right|center"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorWhite"/>

    <RatingBar
        android:id="@+id/details_movie_rating"
        style="@style/AppTheme.MovieRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/details_movie_time"
        android:layout_centerInParent="true"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingRight="8dp"
        android:stepSize="2.0"/>

</RelativeLayout>