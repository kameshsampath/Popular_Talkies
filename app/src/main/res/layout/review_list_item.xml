<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/author_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_author_avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/movie_poster_image"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="56dp">


        <TextView
            android:id="@+id/movie_review_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_medium"
            android:paddingTop="8dp"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/review_author_txt_size"/>

        <TextView
            android:id="@+id/movie_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="15"
            android:paddingTop="8dp"
            android:textColor="@color/colorBlack87"
            android:textSize="@dimen/review_content_txt_size"/>

    </LinearLayout>
</RelativeLayout>

