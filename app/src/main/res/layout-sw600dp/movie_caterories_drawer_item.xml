<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="48dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movie_category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:tint="@drawable/movie_category_icon_selector"/>

    <TextView
        android:id="@+id/movie_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/movie_category_icon"
        android:fontFamily="@style/AppTheme.FontFamily.Medium"
        android:paddingLeft="?android:listPreferredItemPaddingLeft"
        android:textColor="@drawable/movie_category_text_selector"
        android:textSize="14sp"/>

</RelativeLayout>